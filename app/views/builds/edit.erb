<h1>Edit Build for <%= @build.title %></h1>
<p><%= @error %></p>
<form action="/builds/<%=@build.id%>" method="POST">
  <label>Title</label>
  <input type="text" name="title"> value = "<%= @build.title %>"
  <label>Specs</label>
  <input type="text" name="specs"> value = "<%= @build.specs %>"  
  <label>Image</label>
  <input type="text" value="image"> value = "<%= @build.image %>"
  <input type="submit" value="Share">
</form>